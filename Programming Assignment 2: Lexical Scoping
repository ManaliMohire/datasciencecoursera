> makeVector <- function(x = numeric()) {
+     m <- NULL
+     set <- function(y) {
+         x <<- y
+         m <<- NULL
+     }
+     get <- function() x
+     setmean <- function(mean) m <<- mean
+     getmean <- function() m
+     list(set = set, get = get,
+          setmean = setmean,
+          getmean = getmean)
+ }
> View(makeVector)
> mvec <- makeVector()
> x <- 1:4
> mvec$set(x)
> mvec$get()
[1] 1 2 3 4
> mvec$getmean()
NULL
> mvec$setmean(3.4)
> mvec$getmean()
[1] 3.4
